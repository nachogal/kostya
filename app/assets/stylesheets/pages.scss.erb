.box {
  background-color: #fff;
  margin-top: 1.5rem;
  margin-bottom: 1rem;
  padding: 0;
  border-radius: 15px;

  img {
    width: 100%;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px
  }

  .box-content {
    padding: 1.5rem;
  }

  h3 {
    color: $primary-color;
    font-size: 1.3rem;
    font-weight: 800;
    letter-spacing: 0rem;
    text-align: left;
    margin-bottom: 1rem;
    text-transform: none;
  }
}

#solutions .box p {
  @media (min-width: 992px) {
