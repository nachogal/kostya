$primary-color: #4369a9; // blue
$secondary-color: #e41220; // orange
$black: #333;
$grey: #999;
$background-grey: #eef2f3;

.bg-grey {
  background-color: $background-grey;
}

.bg-purple {
  height: 20rem;
  background: linear-gradient(270deg, #5544a2, #4369a9, #2c457e);
  background-size: 600% 600%;

  -webkit-animation: AnimationName 8s ease infinite;
  -moz-animation: AnimationName 8s ease infinite;
  animation: AnimationName 8s ease infinite;

  @-webkit-keyframes AnimationName {
      0%{background-position:0% 50%}
      50%{background-position:100% 50%}
      100%{background-position:0% 50%}
  }
  @-moz-keyframes AnimationName {
      0%{background-position:0% 50%}
      50%{background-position:100% 50%}
      100%{background-position:0% 50%}
  }
  @keyframes AnimationName { 
      0%{background-position:0% 50%}
      50%{background-position:100% 50%}
      100%{background-position:0% 50%}
  }
}

.innovatigo {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

.innovamos {
  margin-top: 1rem;
  text-align: center;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

.logo {
  max-width: 6rem;
  margin-top: 1.5rem;
}

.top {
  position: relative;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  height: 40rem;
  background: linear-gradient(270deg, #8e9eab, #eef2f3);
  background-size: 400% 400%;

  -webkit-animation: AnimationName 8s ease infinite;
  -moz-animation: AnimationName 8s ease infinite;
  animation: AnimationName 8s ease infinite;

  @-webkit-keyframes AnimationName {
      0%{background-position:0% 50%}
      50%{background-position:100% 50%}
      100%{background-position:0% 50%}
  }
  @-moz-keyframes AnimationName {
      0%{background-position:0% 50%}
      50%{background-position:100% 50%}
      100%{background-position:0% 50%}
  }
  @keyframes AnimationName { 
      0%{background-position:0% 50%}
      50%{background-position:100% 50%}
      100%{background-position:0% 50%}
  }
}

.diferencias { 
  padding-right: 6rem;
  padding-left: 6rem;
}

#teammates { 
  
  img {
    margin-bottom: 20px;
  }
}

.box {
  background-color: #fff;
  margin-top: 1.5rem;
  margin-bottom: 1rem;
  padding: 0;
  border-radius: 15px;

  img {
    width: 100%;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px
  }

  .box-content {
    padding: 1.5rem;
  }

  h3 {
    color: $primary-color;
    font-size: 1.3rem;
    font-weight: 800;
    letter-spacing: 0rem;
    text-align: left;
    margin-bottom: 1rem;
    text-transform: none;
  }
}

#solutions .box p {
  @media (min-width: 992px) {
    height: 4rem;
  }
}

#solutions {  
  @media (max-width: 767px) {
    padding-left: 5.5rem;
    padding-right: 5.5rem;
  }
}

#features ul {
  @media (max-width: 991px) {
    display: inline-block;
    list-style: none;
    text-align: center;
    padding-left: 10px;
  }
}

.copyright {
  font-family: 'Geo', sans-serif;
  font-weight: 100;
  font-size: 1rem;
  float: left; 
  @media (max-width: 991px) {
    float: none;
    text-align: center;
  } 
}

.amor {
  font-family: 'Geo', sans-serif;
  font-weight: 100;
  font-size: 1rem;
  float: right;
  @media (max-width: 991px) {
    float: none;
    text-align: center;
    margin-top: 0.5rem;
  }
}

.heart {
  height: 0.7rem;
  width: auto;
  display: inline-block;
  margin: 0 0.25rem 0 0.25rem;
}

footer {
  padding: 20px 0;
  p {
    margin: 0;
  }
}
