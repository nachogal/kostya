$primary-color: #b9e5ff; // blue
$black: #333;
$grey: #999;
$background-grey: #f2f2f2;

.bg-grey {
  background-color: $background-grey;
}

body {
  height: 246rem;
  background-image: url(/assets/background.jpg);
} 

#intro {
  height: 75rem;
  background-position: center top;
  background-color: transparent;
  background-repeat: no-repeat;
  background-size: auto auto;
  padding-top: 0;
}

.kostya {
  height: 30rem;
  background-position: center top;
  background-color: transparent;
  background-repeat: no-repeat;
  background-size: 100% auto;
  @media (max-width: 1170px) {
    background-size: auto auto;
  }
}

#falparsi {
  height: 15rem;
  position: relative;
  background: transparent;
}

.logo {
  max-width: 6rem;
  margin-top: 1.5rem;
}  

.diferencias { 
  padding-right: 6rem;
  padding-left: 6rem;
}

#teammates { 
  
  img {
    margin-bottom: 20px;
  }
}

.box {
  background-color: #fff;
  margin-top: 1.5rem;
  margin-bottom: 1rem;
  padding: 0;
  border-radius: 15px;

  img {
    width: 100%;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px
  }

  .box-content {
    padding: 1.5rem;
  }

  h3 {
    color: $primary-color;
    font-size: 1.3rem;
    font-weight: 800;
    letter-spacing: 0rem;
    text-align: left;
    margin-bottom: 1rem;
    text-transform: none;
  }
}

#solutions .box p {
  @media (min-width: 992px) {
    height: 4rem;
  }
}

#solutions {  
  @media (max-width: 767px) {
    padding-left: 5.5rem;
    padding-right: 5.5rem;
  }
}

#features ul {
  @media (max-width: 991px) {
    display: inline-block;
    list-style: none;
    text-align: center;
    padding-left: 10px;
  }
}

.copyright {
  font-family: 'Geo', sans-serif;
  font-weight: 100;
  font-size: 1rem;
  float: left; 
  @media (max-width: 991px) {
    float: none;
    text-align: center;
  } 
}

.amor {
  font-family: 'Geo', sans-serif;
  font-weight: 100;
  font-size: 1rem;
  float: right;
  @media (max-width: 991px) {
    float: none;
    text-align: center;
    margin-top: 0.5rem;
  }
}

.heart {
  height: 0.7rem;
  width: auto;
  display: inline-block;
  margin: 0 0.25rem 0 0.25rem;
}

footer {
  padding: 20px 0;
  p {
    margin: 0;
  }
}
