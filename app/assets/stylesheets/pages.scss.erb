$primary-color: #b9e5ff; // blue
$black: #333;
$grey: #999;
$background-grey: #f2f2f2;

.bg-grey {
  background-color: $background-grey;
}

body {
  height: 246rem;
  background-image: image-url("background.jpg")
} 

#intro {
  height: auto;
  background-position: center top;
  background-color: transparent;
  background-repeat: no-repeat;
  background-size: auto auto;
  padding-top: 0;
}

.kostya {
  height: 30rem;
  background-position: center top;
  background-color: transparent;
  background-repeat: no-repeat;
  background-size: 100% auto;
  @media (max-width: 1170px) {
    background-size: auto auto;
  }
}

#falparsi {
  height: 15rem;
  position: relative;
  background: transparent;
}

.icon {
  height: 0.9rem;
  width: auto;
  display: inline-block;
  float: center;
  padding-left: 2.1rem;
  padding-right: 2.1rem;
  margin-bottom: 2rem;
}

.icon:hover {
  opacity: 0.8;
  cursor: pointer;
}

#icons {
  padding-top: 2rem;
}

.amor {
  font-family: 'Geo', sans-serif;
  font-weight: 100;
  font-size: 1rem;
  float: right;
  @media (max-width: 991px) {
    float: none;
    text-align: center;
    margin-top: 0.5rem;
  }
}

.heart {
  height: 0.7rem;
  width: auto;
  display: inline-block;
  margin: 0 0.25rem 0 0.25rem;
}

footer {
  padding: 20px 0;
  p {
    margin: 0;
  }
}
